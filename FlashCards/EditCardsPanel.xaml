<UserControl x:Class="FlashCards.EditCardsPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:FlashCards"
      mc:Ignorable="d"
      MinHeight="250"
      MinWidth="150"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch"
      d:DesignHeight="400"
      d:DesignWidth="400">

    <Grid>
        <Border BorderBrush="Gray" BorderThickness="0.5" CornerRadius="10"
                Padding="10" Background="White"
                Width="300" Height="400">

            <ListBox x:Name="wordList" SelectionChanged="worldlist_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <Run Text="{Binding Word}"/>
                            <Run Text=" - "/>
                            <Run Text="{Binding Translation}"/>
                        </TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        </Border>
    </Grid>
</UserControl>
