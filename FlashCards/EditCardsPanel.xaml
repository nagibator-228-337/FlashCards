<UserControl x:Class="FlashCards.EditCardsPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:FlashCards"
      mc:Ignorable="d"
      MinHeight="250"
      MinWidth="150"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch"
      d:DesignHeight="400"
      d:DesignWidth="400">

    <UserControl.Resources>
        <Style x:Key="PanelButton" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid Width="300" Height="400">
            <Border BorderBrush="Gray" BorderThickness="0.5" CornerRadius="10"
                    Padding="10" Background="White">

                <ListBox x:Name="wordList" SelectionChanged="worldlist_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <Run Text="{Binding Word}"/>
                                <Run Text=" - "/>
                                <Run Text="{Binding Translation}"/>
                            </TextBlock>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </Border>

            <Button Style="{StaticResource PanelButton}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,6,6,0" Click="CloseButton_Click">
                <Grid>
                    <Ellipse Fill="#FFF" Stroke="#E74C3C" StrokeThickness="1"/>
                    <Path Data="M 6 6 L 22 22 M 22 6 L 6 22" Stroke="#E74C3C" StrokeThickness="2" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                </Grid>
            </Button>
        </Grid>
    </Grid>
</UserControl>
