<Window x:Class="FlashCards.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlashCards"
        mc:Ignorable="d"
        
        SizeChanged="Window_SizeChanged"
        
        Title="MainWindow" MinHeight="600" MinWidth="900">
    
    

    <Window.Resources>
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8 4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="30"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>

        <Grid>

            <!-- Слой 1: основной интерфейс -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*" />
                    <ColumnDefinition Width="1.9*" />
                    <ColumnDefinition Width="1.5*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="1" Margin="30 50 30 50">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" MinHeight="70" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                        x:Name="MainCardBorder"
                        Margin="15"
                        CornerRadius="25"
                        BorderBrush="#DDD"
                        BorderThickness="1"
                        Background="White"
                        MinHeight="200">
                        <Button Content="Learn Words"
                                Click="LearnWordsButton_Click"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Padding="20"
                        FontSize="24"
                        Background="Transparent"
                        BorderThickness="0"
                        Style="{StaticResource RoundedButton}"/>
                        
                    </Border>

                    <UniformGrid Grid.Row="1"
                         Columns="3"
                         Margin="1 0 1 24">
                        
                        <Button Content="✚"
                        Click="AddButton_click"
                        MinHeight="40"
                        Margin="5"
                        Style="{StaticResource RoundedButton}"/>

                        <Button Content="🖍"
                        Click="EditButton_click"
                        MinHeight="40"
                        Margin="5"
                        Style="{StaticResource RoundedButton}"/>

                        <Button Content="🔍"
                        MinHeight="40"
                        Margin="5"
                        Style="{StaticResource RoundedButton}"/>
                    </UniformGrid>
                </Grid>
            </Grid>


            <ContentControl x:Name="Darkening"
                Visibility="Collapsed"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <Border Background="#80000000"
                         PreviewMouseDown="DarkeningButtonClick"/>
            </ContentControl>

            <ContentControl x:Name="AddCardContent"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="Collapsed" />
            <ContentControl x:Name="EditCardContent"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="Collapsed"
                />
            <ContentControl x:Name="LearnWordsContent"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="Collapsed"/>
        </Grid>

    </Grid>
</Window>
