<UserControl x:Class="FlashCards.AddCardUCPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlashCards"
             mc:Ignorable="d" 
             MinHeight="250"
             MinWidth="150"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             d:DesignHeight="400" d:DesignWidth="400">

    <UserControl.Resources>
        <!-- Watermark Style -->
        <Style x:Key="WatermarkTextBox" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                            <TextBlock x:Name="PART_Watermark"
                                       Text="{TemplateBinding Tag}"
                                       Foreground="Gray"
                                       Margin="4,2,0,0"
                                       IsHitTestVisible="False"
                                       Opacity="0.6"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Rounded Button -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8 4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Viewbox Stretch="Uniform">
        <Border BorderBrush="Gray" BorderThickness="0.5" CornerRadius="10"
                Padding="10" Background="White"
                Width="300" Height="400">

            <Grid>

                <!-- FRONT SIDE -->
                <Grid x:Name="FrontSide">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Add Picture -->
                    <Button Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                            Content="Add Picture"
                            Width="80" Height="80"
                            Margin="0,0,0,10"
                            HorizontalAlignment="Center"
                            Style="{StaticResource RoundedButton}"/>

                    <!-- Image -->
                    <Image Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                           Margin="0,40,0,10"
                           Height="150"
                           Stretch="Uniform"
                           Visibility="Collapsed"
                           x:Name="CardImage"/>

                    <!-- Word (Border for highlight) -->
                    <Border Grid.Row="1" Grid.Column="0" BorderThickness="1" CornerRadius="5" Margin="0,5,0,5" x:Name="WordBorder">
                        <TextBox x:Name="WordTextBox"
                                 VerticalContentAlignment="Center"
                                 Style="{StaticResource WatermarkTextBox}"
                                 Tag="Write a word"/>
                    </Border>

                    <!-- Sentence -->
                    <TextBox x:Name="SentenceTextBox"
                             Grid.Row="2" Grid.Column="0"
                             Margin="0,0,0,10"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalAlignment="Stretch"
                             Style="{StaticResource WatermarkTextBox}"
                             Tag="Write a sentence"/>

                    <!-- Save / Cancel + Error -->
                    <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                Orientation="Vertical"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Margin="0,10,0,0">
                        <!-- Error label -->
                        <Label x:Name="ErrorLabelFront"
                               Foreground="Red"
                               Visibility="Collapsed"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Save" Width="80" Height="30" Margin="5"
                                    Style="{StaticResource RoundedButton}"
                                    Click="SaveButtonClick"/>
                            <Button Content="Cancel" Width="80" Height="30" Margin="5"
                                    Style="{StaticResource RoundedButton}"
                                    Click="CancelButtonClick"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- BACK SIDE -->
                <Grid x:Name="BackSide" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <!-- Translate field -->
                        <RowDefinition Height="Auto"/>
                        <!-- Save/Cancel + Error -->
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Translate (Border for highlight) -->
                    <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" CornerRadius="5" Margin="0,10,0,10" x:Name="TranslateBorder">
                        <TextBox x:Name="TranslateTextBox"
                                 VerticalAlignment="Center"
                                 Style="{StaticResource WatermarkTextBox}"
                                 Tag="Write a translation"/>
                    </Border>

                    <!-- Save / Cancel + Error -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                Orientation="Vertical"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Margin="0,10,0,0">
                        <Label x:Name="ErrorLabelBack"
                               Foreground="Red"
                               Visibility="Collapsed"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Save" Width="80" Height="30" Margin="5"
                                    Style="{StaticResource RoundedButton}"
                                    Click="SaveButtonClick"/>
                            <Button Content="Cancel" Width="80" Height="30" Margin="5"
                                    Style="{StaticResource RoundedButton}"
                                    Click="CancelButtonClick"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Flip Button -->
                <Button Grid.Row="1" Grid.RowSpan="2" Grid.Column="1"
                        Content="Flip"
                        Width="30" Height="60"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Margin="30,0,-10,0"
                        Style="{StaticResource RoundedButton}"
                        x:Name="FlipButton"
                        Click="FlipButtonClick"/>
            </Grid>
        </Border>
    </Viewbox>
</UserControl>
